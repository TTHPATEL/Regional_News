<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewsShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/news_headline"
            android:text="News Headline"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/keywordtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Source Location"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
            android:id="@+id/timetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
                android:textColor="@color/gray"
                android:text="News Time"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/savenav"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/save_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/fav_selector"
                    android:text="@string/newlistsave"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/gray"
                    app:useMaterialThemeColors="false" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/share_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/newlistshare"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>



        <ImageView
            android:id="@+id/news_images"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/image_not_found"
            android:clipToOutline="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/news_des_1"
            android:text="News Description 1"
            android:textSize="19dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/text_black_color"
            android:lineSpacingExtra="6dp"
            android:lineSpacingMultiplier="1.2"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/news_des_2"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black_color"
            android:text="News Description 2"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:lineSpacingMultiplier="1.2"
            android:justificationMode="inter_word"/>

    </LinearLayout>
</ScrollView>
