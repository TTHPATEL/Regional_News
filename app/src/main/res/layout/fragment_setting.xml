<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.gallery.SettingFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ramcharan"/>

                    <TextView
                        android:id="@+id/tv_uname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:textSize="19dp"
                        android:text="રામ ચરણ"
                        android:textStyle="bold" />



                </LinearLayout>


            <TextView
                android:id="@+id/tv_uemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/nav_header_subtitle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/setting_background"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="એકાઉન્ટ સેટિંગસ"
                    android:textColor="@color/text_black_color"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"/>

                <RelativeLayout
                    android:id="@+id/profile_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_user_purpole"/>

                    <LinearLayout
                        android:id="@+id/profile_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/user_icon">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="તમારી પ્રોફાઇલ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="એડિટ કરો અને પ્રોફાઇલ માહિતી જુઓ"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ic_next"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/setting_background"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="એપ્લિકેશન સેટિંગ્સ"
                    android:textColor="@color/text_black_color"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_brightness"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_brightness"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_brightness">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ડિસ્પ્લે પસંદગી"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="કૃપા કરીને તમારી ડિસ્પ્લે ગોઠવો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>






                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_ringing_modified"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_ringing_modified"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_ringing_modified">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="નોટિફિકેશન"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="8.5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="નોટિફિકેશન ચાલુ/બંધ કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="8.5dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>








                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_lightmode"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_lightmode"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_lightmode">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ડાર્ક મોડ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:id="@+id/modeStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ડાર્ક મોડ ચાલુ/બંધ કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <Switch
                        android:id="@+id/mode_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"/>
                </RelativeLayout>

            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/setting_background"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="અન્ય સર્વિસ"
                    android:textColor="@color/text_black_color"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"/>

                <RelativeLayout
                    android:id="@+id/sudoko_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_game"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_game"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_game">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="સુડોકુ ગેમ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="તાર્કિક અને યોજના પર આધારિત ગેમ"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/quiz_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_quiz"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_quiz_2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_quiz">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ક્વિઝ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="આપણા ક્વિઝ સાથે તમારી જ્ઞાનને પરીક્ષણ કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/event_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_calendar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_calendar"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_calendar">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ઇવેન્ટ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="એક્સાઇટેડ અને મનોરંજનનો ઇવેન્ટ"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/scholarship_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_scholarship"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_scholarship"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_scholarship">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="શિષ્યવૃત્તિ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="શિષ્યવૃત્તિ માટે અરજી કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/setting_background"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="એપ્લિકેશન માહિતી"
                    android:textColor="@color/text_black_color"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_share_2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_share">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="એપ શેર"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="એપ શેર કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/feedback_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_feedback"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_feedback"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_feedback">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ફીડબેક"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ફીડબેક આપો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logoutnav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ic_logout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_logout"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/ic_logout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="લૉગ આઉટ"
                            android:textColor="@color/text_black_color"
                            android:textStyle="bold"
                            android:paddingStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="લૉગ આઉટ કરો"
                            android:textColor="@color/text_black_color"
                            android:paddingStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_next"/>
                </RelativeLayout>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_nameversion"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>

